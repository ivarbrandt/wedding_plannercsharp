@model Wedding

<h2 class="mt-2">Plan Your Wedding</h2>

<div class="row justify-content-end">
  <a href="/Dashboard" class="btn btn-link">Dashboard</a>
  <form
    style="display: inline-block;"
    asp-action="Logout"
    asp-controller="Home"
    method="POST"
  >
    <button class="btn btn-link">Logout</button>
  </form>
</div>

<div class="row mt-3 justify-content-start">
  <div class="col-sm-7 mr-5">
    <br />
    <form
      asp-action="CreateWedding"
      asp-controller="Wedding"
      class="form-group"
      method="post"
    >
      <div class="row my-3">
        <label asp-for="WedderOne"></label>
        <span asp-validation-for="WedderOne"></span>
        <input class="form-control" asp-for="WedderOne" />
      </div>

      <div class="row my-3">
        <label asp-for="WedderTwo"></label>
        <span asp-validation-for="WedderTwo"></span>
        <input class="form-control" asp-for="WedderTwo" />
      </div>

      <div class="row my-3">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date"></span>
        <input class="form-control" asp-for="Date" type="date" />
      </div>

      <div class="row my-3">
        <label asp-for="Address"></label>
        <span asp-validation-for="Address"></span>
        <input class="form-control" asp-for="Address" />
      </div>

      <div class="row my-3">
        <button
          class="btn btn-primary btn-sm"
          type="submit"
          style="margin-top: 17px"
        >
          Create
        </button>
      </div>
    </form>
  </div>
</div>
